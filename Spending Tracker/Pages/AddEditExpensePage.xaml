<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Spending_Tracker.Pages.AddEditExpensePage"
             Title="Cheltuială"
             BackgroundColor="#F5F7FA">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">
            
            <!-- Modern Header with Icon -->
            <Border StrokeShape="RoundRectangle 20"
                    Stroke="Transparent"
                    Margin="0,0,0,8"
                    HorizontalOptions="Center">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#6366F1" Offset="0.0" />
                        <GradientStop Color="#8B5CF6" Offset="1.0" />
                    </LinearGradientBrush>
                </Border.Background>
                <VerticalStackLayout Padding="24" Spacing="8">
                    <Image Source="money_bag.png"
                           HeightRequest="64"
                           Aspect="AspectFit"/>
                    <Label Text="Adaugă Cheltuială" 
                           FontSize="22" 
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Border>

            <!-- Modern Description Field -->
            <Border StrokeShape="RoundRectangle 16"
                    BackgroundColor="White"
                    Stroke="#E5E7EB"
                    StrokeThickness="1"
                    Padding="16"
                    Shadow="{Shadow Brush=#15000000, Offset='0,2', Radius=8, Opacity=0.1}">
                <VerticalStackLayout Spacing="8">
                    <Label Text="📝 Descriere" 
                           FontSize="13" 
                           TextColor="#6B7280"
                           FontAttributes="Bold"/>
                    <Entry x:Name="DescriptionEntry" 
                           Placeholder="Ex: Cumpărături la supermarket"
                           FontSize="15"
                           TextColor="#1F2937"/>
                </VerticalStackLayout>
            </Border>

            <!-- Modern Amount Field -->
            <Border StrokeShape="RoundRectangle 16"
                    BackgroundColor="White"
                    Stroke="#E5E7EB"
                    StrokeThickness="1"
                    Padding="16"
                    Shadow="{Shadow Brush=#15000000, Offset='0,2', Radius=8, Opacity=0.1}">
                <VerticalStackLayout Spacing="8">
                    <Label Text="💵 Sumă" 
                           FontSize="13" 
                           TextColor="#6B7280"
                           FontAttributes="Bold"/>
                    <Entry x:Name="AmountEntry" 
                           Placeholder="0.00"
                           Keyboard="Numeric"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="#8B5CF6"/>
                </VerticalStackLayout>
            </Border>

            <!-- Category & Currency Grid -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                <!-- Modern Category Picker -->
                <Border Grid.Column="0"
                        StrokeShape="RoundRectangle 16"
                        BackgroundColor="White"
                        Stroke="#E5E7EB"
                        StrokeThickness="1"
                        Padding="16"
                        Shadow="{Shadow Brush=#15000000, Offset='0,2', Radius=8, Opacity=0.1}">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="📁 Categorie" 
                               FontSize="13" 
                               TextColor="#6B7280"
                               FontAttributes="Bold"/>
                        <Picker x:Name="CategoryPicker" 
                                Title="Selectează"
                                FontSize="14"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Modern Currency Picker -->
                <Border Grid.Column="1"
                        StrokeShape="RoundRectangle 16"
                        BackgroundColor="White"
                        Stroke="#E5E7EB"
                        StrokeThickness="1"
                        Padding="16"
                        Shadow="{Shadow Brush=#15000000, Offset='0,2', Radius=8, Opacity=0.1}">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="💱 Monedă" 
                               FontSize="13" 
                               TextColor="#6B7280"
                               FontAttributes="Bold"/>
                        <Picker x:Name="CurrencyPicker" 
                                Title="RON"
                                FontSize="14"
                                SelectedIndex="0">
                            <Picker.ItemsSource>
                                <x:Array Type="{x:Type x:String}">
                                    <x:String>RON</x:String>
                                    <x:String>EUR</x:String>
                                    <x:String>USD</x:String>
                                    <x:String>GBP</x:String>
                                </x:Array>
                            </Picker.ItemsSource>
                        </Picker>
                    </VerticalStackLayout>
                </Border>
            </Grid>

            <!-- Modern Date Picker -->
            <Border StrokeShape="RoundRectangle 16"
                    BackgroundColor="White"
                    Stroke="#E5E7EB"
                    StrokeThickness="1"
                    Padding="16"
                    Shadow="{Shadow Brush=#15000000, Offset='0,2', Radius=8, Opacity=0.1}">
                <VerticalStackLayout Spacing="8">
                    <Label Text="📅 Data" 
                           FontSize="13" 
                           TextColor="#6B7280"
                           FontAttributes="Bold"/>
                    <DatePicker x:Name="DatePicker" 
                                FontSize="15"/>
                </VerticalStackLayout>
            </Border>

            <!-- Modern Action Buttons -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="12" Margin="0,16,0,0">
                <Border Grid.Column="0"
                        StrokeShape="RoundRectangle 16"
                        Stroke="Transparent"
                        Shadow="{Shadow Brush=#40000000, Offset='0,4', Radius=12, Opacity=0.3}">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#10B981" Offset="0.0" />
                            <GradientStop Color="#059669" Offset="1.0" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <Button Text="✓ Salvează"
                            Clicked="OnSaveClicked"
                            BackgroundColor="Transparent"
                            TextColor="White"
                            HeightRequest="54"
                            FontSize="15"
                            FontAttributes="Bold"/>
                </Border>
                
                <Border Grid.Column="1"
                        StrokeShape="RoundRectangle 16"
                        BackgroundColor="White"
                        Stroke="#E5E7EB"
                        StrokeThickness="1"
                        Shadow="{Shadow Brush=#15000000, Offset='0,2', Radius=8, Opacity=0.1}">
                    <Button Text="✕ Anulează"
                            Clicked="OnCancelClicked"
                            BackgroundColor="Transparent"
                            TextColor="#6B7280"
                            HeightRequest="54"
                            FontSize="15"
                            FontAttributes="Bold"/>
                </Border>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

