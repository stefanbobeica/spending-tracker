<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Spending_Tracker.Pages.AddEditExpensePage"
             Title="Cheltuială">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            
            <Label Text="Adaugă/Editează Cheltuială" 
                   FontSize="24" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,0,0,20"/>

            <!-- Description -->
            <Frame Padding="10" CornerRadius="10">
                <VerticalStackLayout>
                    <Label Text="Descriere" FontSize="14" TextColor="Gray"/>
                    <Entry x:Name="DescriptionEntry" 
                           Placeholder="Ex: Cumpărături la supermarket"
                           FontSize="16"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Amount -->
            <Frame Padding="10" CornerRadius="10">
                <VerticalStackLayout>
                    <Label Text="Sumă" FontSize="14" TextColor="Gray"/>
                    <Entry x:Name="AmountEntry" 
                           Placeholder="0.00"
                           Keyboard="Numeric"
                           FontSize="16"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Category Picker -->
            <Frame Padding="10" CornerRadius="10">
                <VerticalStackLayout>
                    <Label Text="Categorie" FontSize="14" TextColor="Gray"/>
                    <Picker x:Name="CategoryPicker" 
                            Title="Selectează categoria"
                            FontSize="16"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Date Picker -->
            <Frame Padding="10" CornerRadius="10">
                <VerticalStackLayout>
                    <Label Text="Data" FontSize="14" TextColor="Gray"/>
                    <DatePicker x:Name="DatePicker" 
                                FontSize="16"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Currency Picker -->
            <Frame Padding="10" CornerRadius="10">
                <VerticalStackLayout>
                    <Label Text="Monedă" FontSize="14" TextColor="Gray"/>
                    <Picker x:Name="CurrencyPicker" 
                            Title="Selectează moneda"
                            FontSize="16"
                            SelectedIndex="0">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>RON</x:String>
                                <x:String>EUR</x:String>
                                <x:String>USD</x:String>
                                <x:String>GBP</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>
                </VerticalStackLayout>
            </Frame>

            <!-- Image display -->
            <Image x:Name="ExpenseImage"
                   Source="dotnet_bot.png"
                   HeightRequest="100"
                   Aspect="AspectFit"
                   Margin="0,10"/>

            <!-- Buttons -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,20,0,0">
                <Button Grid.Column="0"
                        Text="Salvează"
                        Clicked="OnSaveClicked"
                        BackgroundColor="#512BD4"
                        TextColor="White"
                        HeightRequest="50"
                        CornerRadius="10"
                        FontSize="16"
                        FontAttributes="Bold"/>
                <Button Grid.Column="1"
                        Text="Anulează"
                        Clicked="OnCancelClicked"
                        BackgroundColor="LightGray"
                        TextColor="Black"
                        HeightRequest="50"
                        CornerRadius="10"
                        FontSize="16"/>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

