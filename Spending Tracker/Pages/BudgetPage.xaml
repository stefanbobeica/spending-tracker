<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Spending_Tracker.Pages.BudgetPage"
             Title="Bugete"
             BackgroundColor="#F5F7FA">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <!-- Modern Header -->
            <VerticalStackLayout Spacing="4">
                <Label Text="💼 Gestionare Bugete" 
                       FontSize="28" 
                       FontAttributes="Bold"
                       TextColor="#1F2937"
                       HorizontalOptions="Center"/>
                <Label Text="Planifică și urmărește bugetele tale" 
                       FontSize="14" 
                       TextColor="#6B7280"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <!-- Modern Add Budget Card -->
            <Border StrokeShape="RoundRectangle 20"
                    BackgroundColor="White"
                    Stroke="#E5E7EB"
                    StrokeThickness="1"
                    Padding="20"
                    Shadow="{Shadow Brush=#20000000, Offset='0,2', Radius=12, Opacity=0.15}">
                <VerticalStackLayout Spacing="16">
                    <Label Text="Adaugă Buget Nou" 
                           FontSize="16" 
                           FontAttributes="Bold"
                           TextColor="#1F2937"/>
                    
                    <Border StrokeShape="RoundRectangle 12"
                            BackgroundColor="#F9FAFB"
                            Padding="12">
                        <VerticalStackLayout Spacing="6">
                            <Label Text="Categorie" 
                                   FontSize="12" 
                                   TextColor="#6B7280"
                                   FontAttributes="Bold"/>
                            <Picker x:Name="CategoryPicker" 
                                    Title="Selectează categoria"
                                    FontSize="14"/>
                        </VerticalStackLayout>
                    </Border>
                    
                    <Border StrokeShape="RoundRectangle 12"
                            BackgroundColor="#F9FAFB"
                            Padding="12">
                        <VerticalStackLayout Spacing="6">
                            <Label Text="Buget Lunar (RON)" 
                                   FontSize="12" 
                                   TextColor="#6B7280"
                                   FontAttributes="Bold"/>
                            <Entry x:Name="BudgetEntry" 
                                   Placeholder="0.00"
                                   Keyboard="Numeric"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   TextColor="#8B5CF6"/>
                        </VerticalStackLayout>
                    </Border>
                    
                    <Border StrokeShape="RoundRectangle 14"
                            Stroke="Transparent"
                            Shadow="{Shadow Brush=#30000000, Offset='0,2', Radius=8, Opacity=0.2}">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#6366F1" Offset="0.0" />
                                <GradientStop Color="#8B5CF6" Offset="1.0" />
                            </LinearGradientBrush>
                        </Border.Background>
                        <Button Text="💾 Salvează Buget"
                                Clicked="OnSaveBudgetClicked"
                                BackgroundColor="Transparent"
                                TextColor="White"
                                HeightRequest="48"
                                FontSize="15"
                                FontAttributes="Bold"/>
                    </Border>
                </VerticalStackLayout>
            </Border>

            <!-- Modern Section Header -->
            <Label Text="Bugete Active" 
                   FontSize="18" 
                   FontAttributes="Bold"
                   TextColor="#1F2937"
                   Margin="0,8,0,0"/>

            <!-- Modern Budget Cards -->
            <CollectionView x:Name="BudgetsCollectionView"
                           SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border StrokeShape="RoundRectangle 18"
                                BackgroundColor="White"
                                Stroke="#E5E7EB"
                                StrokeThickness="1"
                                Padding="20" 
                                Margin="0,0,0,12"
                                Shadow="{Shadow Brush=#15000000, Offset='0,2', Radius=10, Opacity=0.12}">
                            <VerticalStackLayout Spacing="12">
                                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                                    <Border Grid.Column="0"
                                            StrokeShape="RoundRectangle 10"
                                            BackgroundColor="#F3F4F6"
                                            Padding="10"
                                            WidthRequest="40"
                                            HeightRequest="40">
                                        <Label Text="📊" 
                                               FontSize="18"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"/>
                                    </Border>
                                    <Label Grid.Column="1"
                                           Text="{Binding Category}" 
                                           FontSize="17" 
                                           FontAttributes="Bold"
                                           TextColor="#1F2937"
                                           VerticalOptions="Center"/>
                                </Grid>
                                
                                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                                    <Label Grid.Column="0"
                                          Text="{Binding BudgetText}"
                                          FontSize="13"
                                          TextColor="#6B7280"/>
                                    <Label Grid.Column="1"
                                          Text="{Binding SpentText}"
                                          FontSize="15"
                                          FontAttributes="Bold"
                                          TextColor="{Binding StatusColor}"/>
                                </Grid>
                                
                                <Border StrokeShape="RoundRectangle 8"
                                        BackgroundColor="#F3F4F6"
                                        HeightRequest="12"
                                        Padding="2">
                                    <ProgressBar Progress="{Binding Progress}"
                                               ProgressColor="{Binding ProgressColor}"
                                               HeightRequest="8"/>
                                </Border>
                                
                                <Label Text="{Binding PercentageText}"
                                      FontSize="12"
                                      TextColor="#9CA3AF"
                                      HorizontalOptions="End"/>
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

