<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Spending_Tracker.Pages.AboutPage"
             Title="Despre"
             BackgroundColor="#F5F7FA">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="24">
            
            <!-- Modern App Header -->
            <Border StrokeShape="RoundRectangle 24"
                    Stroke="Transparent"
                    Shadow="{Shadow Brush=#40000000, Offset='0,4', Radius=16, Opacity=0.3}">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#6366F1" Offset="0.0" />
                        <GradientStop Color="#8B5CF6" Offset="1.0" />
                    </LinearGradientBrush>
                </Border.Background>
                <VerticalStackLayout HorizontalOptions="Center" Spacing="12" Padding="32">
                    <Image Source="money_bag.png"
                           HeightRequest="100"
                           Aspect="AspectFit"/>
                    <Label Text="💰 Spending Tracker" 
                           FontSize="28" 
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"/>
                    <Border StrokeShape="RoundRectangle 12"
                            BackgroundColor="#FFFFFF30"
                            Padding="12,6"
                            HorizontalOptions="Center">
                        <Label Text="v1.0.0" 
                               FontSize="13" 
                               TextColor="White"
                               FontAttributes="Bold"/>
                    </Border>
                </VerticalStackLayout>
            </Border>

            <!-- Modern Description Card -->
            <Border StrokeShape="RoundRectangle 20"
                    BackgroundColor="White"
                    Stroke="#E5E7EB"
                    StrokeThickness="1"
                    Padding="20"
                    Shadow="{Shadow Brush=#15000000, Offset='0,2', Radius=12, Opacity=0.12}">
                <VerticalStackLayout Spacing="12">
                    <Label Text="📖 Descriere" 
                           FontSize="17" 
                           FontAttributes="Bold"
                           TextColor="#1F2937"/>
                    <Label Text="Spending Tracker este o aplicație simplă și eficientă pentru gestionarea cheltuielilor zilnice. Urmărire facilă a cheltuielilor, categorisare automată și rapoarte detaliate pentru a-ți controla bugetul."
                           FontSize="14"
                           LineBreakMode="WordWrap"
                           TextColor="#6B7280"
                           LineHeight="1.5"/>
                </VerticalStackLayout>
            </Border>

            <!-- Modern Features Section -->
            <VerticalStackLayout Spacing="12">
                <Label Text="✨ Funcționalități Principale" 
                       FontSize="18" 
                       FontAttributes="Bold"
                       TextColor="#1F2937"/>
                
                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="12" RowSpacing="12">
                    <Border Grid.Row="0" Grid.Column="0"
                            StrokeShape="RoundRectangle 16"
                            BackgroundColor="White"
                            Stroke="#E5E7EB"
                            StrokeThickness="1"
                            Padding="16"
                            Shadow="{Shadow Brush=#10000000, Offset='0,2', Radius=8, Opacity=0.1}">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="⚡" FontSize="28" HorizontalOptions="Start"/>
                            <Label Text="Adăugare Rapidă" FontSize="13" FontAttributes="Bold" TextColor="#1F2937"/>
                            <Label Text="Cheltuieli în secunde" FontSize="11" TextColor="#6B7280" LineBreakMode="WordWrap"/>
                        </VerticalStackLayout>
                    </Border>
                    
                    <Border Grid.Row="0" Grid.Column="1"
                            StrokeShape="RoundRectangle 16"
                            BackgroundColor="White"
                            Stroke="#E5E7EB"
                            StrokeThickness="1"
                            Padding="16"
                            Shadow="{Shadow Brush=#10000000, Offset='0,2', Radius=8, Opacity=0.1}">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="📊" FontSize="28" HorizontalOptions="Start"/>
                            <Label Text="Statistici Live" FontSize="13" FontAttributes="Bold" TextColor="#1F2937"/>
                            <Label Text="Urmărire în timp real" FontSize="11" TextColor="#6B7280" LineBreakMode="WordWrap"/>
                        </VerticalStackLayout>
                    </Border>
                    
                    <Border Grid.Row="1" Grid.Column="0"
                            StrokeShape="RoundRectangle 16"
                            BackgroundColor="White"
                            Stroke="#E5E7EB"
                            StrokeThickness="1"
                            Padding="16"
                            Shadow="{Shadow Brush=#10000000, Offset='0,2', Radius=8, Opacity=0.1}">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="💼" FontSize="28" HorizontalOptions="Start"/>
                            <Label Text="Bugete Smart" FontSize="13" FontAttributes="Bold" TextColor="#1F2937"/>
                            <Label Text="Planificare eficientă" FontSize="11" TextColor="#6B7280" LineBreakMode="WordWrap"/>
                        </VerticalStackLayout>
                    </Border>
                    
                    <Border Grid.Row="1" Grid.Column="1"
                            StrokeShape="RoundRectangle 16"
                            BackgroundColor="White"
                            Stroke="#E5E7EB"
                            StrokeThickness="1"
                            Padding="16"
                            Shadow="{Shadow Brush=#10000000, Offset='0,2', Radius=8, Opacity=0.1}">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="💱" FontSize="28" HorizontalOptions="Start"/>
                            <Label Text="Convertor Live" FontSize="13" FontAttributes="Bold" TextColor="#1F2937"/>
                            <Label Text="Rate actuale" FontSize="11" TextColor="#6B7280" LineBreakMode="WordWrap"/>
                        </VerticalStackLayout>
                    </Border>
                </Grid>
            </VerticalStackLayout>

            <!-- Modern How to Use -->
            <Border StrokeShape="RoundRectangle 20"
                    BackgroundColor="White"
                    Stroke="#E5E7EB"
                    StrokeThickness="1"
                    Padding="20"
                    Shadow="{Shadow Brush=#15000000, Offset='0,2', Radius=12, Opacity=0.12}">
                <VerticalStackLayout Spacing="16">
                    <Label Text="🚀 Cum să Utilizezi" 
                           FontSize="17" 
                           FontAttributes="Bold"
                           TextColor="#1F2937"/>
                    
                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto" ColumnSpacing="12" RowSpacing="12">
                        <Border Grid.Row="0" Grid.Column="0"
                                StrokeShape="RoundRectangle 8"
                                BackgroundColor="#6366F1"
                                WidthRequest="28" HeightRequest="28">
                            <Label Text="1" TextColor="White" FontSize="13" FontAttributes="Bold" 
                                   HorizontalOptions="Center" VerticalOptions="Center"/>
                        </Border>
                        <Label Grid.Row="0" Grid.Column="1"
                               Text="Adaugă cheltuielile zilnice cu detalii complete"
                               FontSize="13" TextColor="#6B7280" VerticalOptions="Center" LineBreakMode="WordWrap"/>
                        
                        <Border Grid.Row="1" Grid.Column="0"
                                StrokeShape="RoundRectangle 8"
                                BackgroundColor="#8B5CF6"
                                WidthRequest="28" HeightRequest="28">
                            <Label Text="2" TextColor="White" FontSize="13" FontAttributes="Bold" 
                                   HorizontalOptions="Center" VerticalOptions="Center"/>
                        </Border>
                        <Label Grid.Row="1" Grid.Column="1"
                               Text="Setează bugete lunare pentru fiecare categorie"
                               FontSize="13" TextColor="#6B7280" VerticalOptions="Center" LineBreakMode="WordWrap"/>
                        
                        <Border Grid.Row="2" Grid.Column="0"
                                StrokeShape="RoundRectangle 8"
                                BackgroundColor="#10B981"
                                WidthRequest="28" HeightRequest="28">
                            <Label Text="3" TextColor="White" FontSize="13" FontAttributes="Bold" 
                                   HorizontalOptions="Center" VerticalOptions="Center"/>
                        </Border>
                        <Label Grid.Row="2" Grid.Column="1"
                               Text="Consultă statisticile pentru a-ți monitoriza cheltuielile"
                               FontSize="13" TextColor="#6B7280" VerticalOptions="Center" LineBreakMode="WordWrap"/>
                        
                        <Border Grid.Row="3" Grid.Column="0"
                                StrokeShape="RoundRectangle 8"
                                BackgroundColor="#F59E0B"
                                WidthRequest="28" HeightRequest="28">
                            <Label Text="4" TextColor="White" FontSize="13" FontAttributes="Bold" 
                                   HorizontalOptions="Center" VerticalOptions="Center"/>
                        </Border>
                        <Label Grid.Row="3" Grid.Column="1"
                               Text="Gestionează categoriile după nevoile tale"
                               FontSize="13" TextColor="#6B7280" VerticalOptions="Center" LineBreakMode="WordWrap"/>
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <!-- Modern Tip Card -->
            <Border StrokeShape="RoundRectangle 20"
                    Stroke="Transparent"
                    Shadow="{Shadow Brush=#30EF4444, Offset='0,2', Radius=12, Opacity=0.2}">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#FEF3C7" Offset="0.0" />
                        <GradientStop Color="#FDE68A" Offset="1.0" />
                    </LinearGradientBrush>
                </Border.Background>
                <VerticalStackLayout Spacing="10" Padding="20">
                    <Label Text="💡 Sfat Pro" 
                           FontSize="16" 
                           FontAttributes="Bold"
                           TextColor="#92400E"/>
                    <Label Text="Introdu zilnic cheltuielile pentru rapoarte mai precise și o mai bună înțelegere a obiceiurilor tale de cheltuieli."
                           FontSize="13"
                           LineBreakMode="WordWrap"
                           TextColor="#78350F"
                           LineHeight="1.5"/>
                </VerticalStackLayout>
            </Border>

            <!-- Info Section -->
            <Border Padding="15" StrokeShape="RoundRectangle 10" BackgroundColor="#F0F0F0">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Informații" 
                           FontSize="16" 
                           FontAttributes="Bold"/>
                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="10" RowSpacing="8">
                        <Label Grid.Row="0" Grid.Column="0" Text="Platform:" FontAttributes="Bold" FontSize="12"/>
                        <Label Grid.Row="0" Grid.Column="1" Text=".NET MAUI" FontSize="12"/>
                        
                        <Label Grid.Row="1" Grid.Column="0" Text="Database:" FontAttributes="Bold" FontSize="12"/>
                        <Label Grid.Row="1" Grid.Column="1" Text="SQLite" FontSize="12"/>
                        
                        <Label Grid.Row="2" Grid.Column="0" Text="Limba:" FontAttributes="Bold" FontSize="12"/>
                        <Label Grid.Row="2" Grid.Column="1" Text="Română" FontSize="12"/>
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <!-- Footer -->
            <Label Text="© 2025 Spending Tracker. Toate drepturile rezervate."
                   FontSize="11"
                   TextColor="Gray"
                   HorizontalOptions="Center"
                   Margin="0,20"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

