<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Spending_Tracker.Pages.CurrencyConverterPage"
             Title="Conversie Valutară">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <Label Text="Conversie Valutară" 
                   FontSize="28" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,10"/>

            <Image Source="dotnet_bot.png"
                   HeightRequest="120"
                   Aspect="AspectFit"/>

            <!-- Amount to convert -->
            <Frame Padding="15" CornerRadius="10" BackgroundColor="#F0F0F0">
                <VerticalStackLayout Spacing="5">
                    <Label Text="Sumă de Convertit" FontSize="14" TextColor="Gray"/>
                    <Entry x:Name="AmountEntry" 
                           Placeholder="Introdu suma"
                           Keyboard="Numeric"
                           FontSize="24"
                           TextChanged="OnAmountChanged"
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
            </Frame>

            <!-- From Currency -->
            <Frame Padding="15" CornerRadius="10">
                <VerticalStackLayout Spacing="5">
                    <Label Text="Din" FontSize="14" TextColor="Gray" HorizontalOptions="Center"/>
                    <Picker x:Name="FromCurrencyPicker" 
                            Title="Selectează moneda"
                            FontSize="20"
                            HorizontalOptions="Center"
                            SelectedIndexChanged="OnCurrencyChanged">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>RON</x:String>
                                <x:String>EUR</x:String>
                                <x:String>USD</x:String>
                                <x:String>GBP</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>
                </VerticalStackLayout>
            </Frame>

            <!-- Swap button -->
            <Button Text="⇅ Schimbă"
                    Clicked="OnSwapClicked"
                    BackgroundColor="#45B7D1"
                    TextColor="White"
                    HeightRequest="45"
                    CornerRadius="22"
                    FontSize="18"/>

            <!-- To Currency -->
            <Frame Padding="15" CornerRadius="10">
                <VerticalStackLayout Spacing="5">
                    <Label Text="În" FontSize="14" TextColor="Gray" HorizontalOptions="Center"/>
                    <Picker x:Name="ToCurrencyPicker" 
                            Title="Selectează moneda"
                            FontSize="20"
                            HorizontalOptions="Center"
                            SelectedIndexChanged="OnCurrencyChanged">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>RON</x:String>
                                <x:String>EUR</x:String>
                                <x:String>USD</x:String>
                                <x:String>GBP</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>
                </VerticalStackLayout>
            </Frame>

            <!-- Result -->
            <Frame Padding="20" CornerRadius="10" BackgroundColor="#512BD4">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Rezultat" 
                           TextColor="White" 
                           FontSize="16" 
                           HorizontalOptions="Center"/>
                    <Label x:Name="ResultLabel" 
                           Text="0.00" 
                           TextColor="White" 
                           FontSize="36" 
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>
                    <Label x:Name="RateLabel" 
                           Text="Rată: -" 
                           TextColor="White" 
                           FontSize="12" 
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Convert button -->
            <Button Text="Convertește"
                    Clicked="OnConvertClicked"
                    BackgroundColor="#FF6B6B"
                    TextColor="White"
                    HeightRequest="55"
                    CornerRadius="10"
                    FontSize="20"
                    FontAttributes="Bold"/>

            <!-- Activity Indicator -->
            <ActivityIndicator x:Name="LoadingIndicator" 
                              IsRunning="False"
                              Color="#512BD4"
                              HeightRequest="40"/>

            <!-- Info -->
            <Label x:Name="InfoLabel"
                   Text="Apasă 'Convertește' pentru a obține ratele actuale de schimb"
                   FontSize="12"
                   TextColor="Gray"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   Margin="0,10"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

