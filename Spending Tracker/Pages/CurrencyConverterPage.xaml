<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Spending_Tracker.Pages.CurrencyConverterPage"
             Title="Conversie Valutară"
             BackgroundColor="#F5F7FA">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <!-- Modern Header with Icon -->
            <Border StrokeShape="RoundRectangle 24"
                    Stroke="Transparent"
                    Margin="0,0,0,8"
                    Shadow="{Shadow Brush=#40000000, Offset='0,4', Radius=12, Opacity=0.3}">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#10B981" Offset="0.0" />
                        <GradientStop Color="#059669" Offset="1.0" />
                    </LinearGradientBrush>
                </Border.Background>
                <VerticalStackLayout Padding="24" Spacing="8">
                    <Image Source="money.png"
                           HeightRequest="80"
                           Aspect="AspectFit"/>
                    <Label Text="💱 Conversie Valutară" 
                           FontSize="24" 
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"/>
                    <Label Text="Rate de schimb în timp real" 
                           FontSize="13" 
                           TextColor="#FFFFFFCC"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Border>

            <!-- Modern Amount Input -->
            <Border StrokeShape="RoundRectangle 20"
                    BackgroundColor="White"
                    Stroke="#E5E7EB"
                    StrokeThickness="1"
                    Padding="24"
                    Shadow="{Shadow Brush=#20000000, Offset='0,2', Radius=12, Opacity=0.15}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Sumă de Convertit" 
                           FontSize="13" 
                           TextColor="#6B7280"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>
                    <Entry x:Name="AmountEntry" 
                           Placeholder="0.00"
                           Keyboard="Numeric"
                           FontSize="32"
                           FontAttributes="Bold"
                           TextColor="#10B981"
                           TextChanged="OnAmountChanged"
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
            </Border>

            <!-- Currency Selection Cards -->
            <Grid ColumnDefinitions="*,Auto,*" ColumnSpacing="12">
                <!-- From Currency -->
                <Border Grid.Column="0"
                        StrokeShape="RoundRectangle 18"
                        BackgroundColor="White"
                        Stroke="#E5E7EB"
                        StrokeThickness="1"
                        Padding="20"
                        Shadow="{Shadow Brush=#15000000, Offset='0,2', Radius=10, Opacity=0.12}">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Din" 
                               FontSize="12" 
                               TextColor="#6B7280"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"/>
                        <Picker x:Name="FromCurrencyPicker" 
                                Title="RON"
                                FontSize="18"
                                FontAttributes="Bold"
                                HorizontalOptions="Center"
                                SelectedIndexChanged="OnCurrencyChanged">
                            <Picker.ItemsSource>
                                <x:Array Type="{x:Type x:String}">
                                    <x:String>RON</x:String>
                                    <x:String>EUR</x:String>
                                    <x:String>USD</x:String>
                                    <x:String>GBP</x:String>
                                </x:Array>
                            </Picker.ItemsSource>
                        </Picker>
                    </VerticalStackLayout>
                </Border>

                <!-- Swap Button -->
                <Border Grid.Column="1"
                        StrokeShape="RoundRectangle 28"
                        BackgroundColor="#F3F4F6"
                        WidthRequest="56"
                        HeightRequest="56"
                        VerticalOptions="Center"
                        Shadow="{Shadow Brush=#15000000, Offset='0,2', Radius=8, Opacity=0.1}">
                    <Button Text="⇄"
                            Clicked="OnSwapClicked"
                            BackgroundColor="Transparent"
                            TextColor="#10B981"
                            FontSize="24"
                            FontAttributes="Bold"/>
                </Border>

                <!-- To Currency -->
                <Border Grid.Column="2"
                        StrokeShape="RoundRectangle 18"
                        BackgroundColor="White"
                        Stroke="#E5E7EB"
                        StrokeThickness="1"
                        Padding="20"
                        Shadow="{Shadow Brush=#15000000, Offset='0,2', Radius=10, Opacity=0.12}">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="În" 
                               FontSize="12" 
                               TextColor="#6B7280"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"/>
                        <Picker x:Name="ToCurrencyPicker" 
                                Title="EUR"
                                FontSize="18"
                                FontAttributes="Bold"
                                HorizontalOptions="Center"
                                SelectedIndexChanged="OnCurrencyChanged">
                            <Picker.ItemsSource>
                                <x:Array Type="{x:Type x:String}">
                                    <x:String>RON</x:String>
                                    <x:String>EUR</x:String>
                                    <x:String>USD</x:String>
                                    <x:String>GBP</x:String>
                                </x:Array>
                            </Picker.ItemsSource>
                        </Picker>
                    </VerticalStackLayout>
                </Border>
            </Grid>

            <!-- Modern Result Display -->
            <Border StrokeShape="RoundRectangle 24"
                    Stroke="Transparent"
                    Shadow="{Shadow Brush=#40000000, Offset='0,4', Radius=16, Opacity=0.3}">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#6366F1" Offset="0.0" />
                        <GradientStop Color="#8B5CF6" Offset="1.0" />
                    </LinearGradientBrush>
                </Border.Background>
                <VerticalStackLayout Padding="28" Spacing="12">
                    <Label Text="Rezultat" 
                           TextColor="#FFFFFFCC" 
                           FontSize="14"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>
                    <Label x:Name="ResultLabel" 
                           Text="0.00" 
                           TextColor="White" 
                           FontSize="42" 
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>
                    <Label x:Name="RateLabel" 
                           Text="Rată: -" 
                           TextColor="#FFFFFF99" 
                           FontSize="13" 
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Border>

            <!-- Modern Convert Button -->
            <Border StrokeShape="RoundRectangle 16"
                    Stroke="Transparent"
                    Shadow="{Shadow Brush=#40000000, Offset='0,4', Radius=12, Opacity=0.3}">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#10B981" Offset="0.0" />
                        <GradientStop Color="#059669" Offset="1.0" />
                    </LinearGradientBrush>
                </Border.Background>
                <Button Text="🔄 Convertește Acum"
                        Clicked="OnConvertClicked"
                        BackgroundColor="Transparent"
                        TextColor="White"
                        HeightRequest="56"
                        FontSize="16"
                        FontAttributes="Bold"/>
            </Border>

            <!-- Activity Indicator -->
            <ActivityIndicator x:Name="LoadingIndicator" 
                              IsRunning="False"
                              Color="#10B981"
                              HeightRequest="40"/>

            <!-- Info -->
            <Label x:Name="InfoLabel"
                   Text="Apasă 'Convertește' pentru a obține ratele actuale de schimb"
                   FontSize="12"
                   TextColor="Gray"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   Margin="0,10"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

