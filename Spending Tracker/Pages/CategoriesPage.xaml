<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Spending_Tracker.Pages.CategoriesPage"
             Title="Categorii">

    <VerticalStackLayout Padding="15" Spacing="15">
        
        <Label Text="Gestionare Categorii" 
               FontSize="24" 
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0,0,0,10"/>

        <!-- Add Category Section -->
        <Border Padding="15" StrokeShape="RoundRectangle 10" BackgroundColor="#F0F0F0">
            <VerticalStackLayout Spacing="10">
                <Label Text="Adaugă o Nouă Categorie" FontSize="14" FontAttributes="Bold"/>
                <Entry x:Name="CategoryNameEntry" 
                       Placeholder="Nume categorie"
                       FontSize="12"/>
                
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10" Margin="0,5,0,0">
                    <Label Grid.Column="0" 
                           Text="Culoare"
                           VerticalOptions="Center"
                           FontSize="12"/>
                    <Button Grid.Column="1" 
                            x:Name="ColorButton"
                            Text="Alege Culoare"
                            Clicked="OnColorPickerClicked"
                            BackgroundColor="#512BD4"
                            TextColor="White"
                            Padding="10,5"
                            FontSize="12"/>
                </Grid>

                <Button Text="Salvează Categorie"
                        Clicked="OnSaveCategoryClicked"
                        BackgroundColor="#4ECDC4"
                        TextColor="White"
                        Margin="0,5,0,0"
                        Padding="15,10"/>
            </VerticalStackLayout>
        </Border>

        <!-- Categories List -->
        <Label Text="Categorii Active" 
               FontSize="16" 
               FontAttributes="Bold"
               Margin="0,10,0,5"/>

        <CollectionView x:Name="CategoriesCollectionView"
                       SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="15" Margin="0,5" StrokeShape="RoundRectangle 10" BackgroundColor="White" Stroke="#E0E0E0">
                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10">
                            <BoxView Grid.Column="0"
                                    Color="{Binding ColorValue}"
                                    WidthRequest="40"
                                    HeightRequest="40"
                                    CornerRadius="8"/>
                            <Label Grid.Column="1"
                                  Text="{Binding Name}"
                                  FontSize="14"
                                  FontAttributes="Bold"
                                  VerticalOptions="Center"/>
                            <Button Grid.Column="2"
                                   Text="Șterge"
                                   Clicked="OnDeleteCategoryClicked"
                                   CommandParameter="{Binding Id}"
                                   BackgroundColor="#FF6B6B"
                                   TextColor="White"
                                   Padding="8,5"
                                   FontSize="10"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>

</ContentPage>

