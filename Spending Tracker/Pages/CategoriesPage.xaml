<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Spending_Tracker.Pages.CategoriesPage"
             Title="Categorii"
             BackgroundColor="#F5F7FA">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <!-- Modern Header -->
            <VerticalStackLayout Spacing="4">
                <Label Text="🏷️ Gestionare Categorii" 
                       FontSize="28" 
                       FontAttributes="Bold"
                       TextColor="#1F2937"
                       HorizontalOptions="Center"/>
                <Label Text="Organizează-ți cheltuielile" 
                       FontSize="14" 
                       TextColor="#6B7280"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <!-- Modern Add Category Card -->
            <Border StrokeShape="RoundRectangle 20"
                    BackgroundColor="White"
                    Stroke="#E5E7EB"
                    StrokeThickness="1"
                    Padding="20"
                    Shadow="{Shadow Brush=#20000000, Offset='0,2', Radius=12, Opacity=0.15}">
                <VerticalStackLayout Spacing="16">
                    <Label Text="✨ Adaugă Categorie Nouă" 
                           FontSize="16" 
                           FontAttributes="Bold"
                           TextColor="#1F2937"/>
                    
                    <Border StrokeShape="RoundRectangle 12"
                            BackgroundColor="#F9FAFB"
                            Padding="14">
                        <Entry x:Name="CategoryNameEntry" 
                               Placeholder="Numele categoriei..."
                               FontSize="15"
                               TextColor="#1F2937"/>
                    </Border>
                    
                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                        <Border Grid.Column="0"
                                StrokeShape="RoundRectangle 12"
                                BackgroundColor="#F9FAFB"
                                Padding="14">
                            <Label Text="🎨 Culoare Categorie"
                                   VerticalOptions="Center"
                                   FontSize="14"
                                   TextColor="#6B7280"/>
                        </Border>
                        <Border Grid.Column="1"
                                StrokeShape="RoundRectangle 12"
                                Stroke="Transparent"
                                Shadow="{Shadow Brush=#25000000, Offset='0,2', Radius=6, Opacity=0.2}">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#6366F1" Offset="0.0" />
                                    <GradientStop Color="#8B5CF6" Offset="1.0" />
                                </LinearGradientBrush>
                            </Border.Background>
                            <Button x:Name="ColorButton"
                                    Text="Alege"
                                    Clicked="OnColorPickerClicked"
                                    BackgroundColor="Transparent"
                                    TextColor="White"
                                    FontSize="13"
                                    FontAttributes="Bold"
                                    Padding="20,0"/>
                        </Border>
                    </Grid>

                    <Border StrokeShape="RoundRectangle 14"
                            Stroke="Transparent"
                            Shadow="{Shadow Brush=#30000000, Offset='0,2', Radius=8, Opacity=0.2}">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#10B981" Offset="0.0" />
                                <GradientStop Color="#059669" Offset="1.0" />
                            </LinearGradientBrush>
                        </Border.Background>
                        <Button Text="💾 Salvează Categorie"
                                Clicked="OnSaveCategoryClicked"
                                BackgroundColor="Transparent"
                                TextColor="White"
                                HeightRequest="48"
                                FontSize="15"
                                FontAttributes="Bold"/>
                    </Border>
                </VerticalStackLayout>
            </Border>

            <!-- Modern Section Header -->
            <Label Text="Categorii Active" 
                   FontSize="18" 
                   FontAttributes="Bold"
                   TextColor="#1F2937"
                   Margin="0,8,0,0"/>

            <!-- Modern Categories List -->
            <CollectionView x:Name="CategoriesCollectionView"
                           SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border StrokeShape="RoundRectangle 16"
                                BackgroundColor="White"
                                Stroke="#E5E7EB"
                                StrokeThickness="1"
                                Padding="16" 
                                Margin="0,0,0,12"
                                Shadow="{Shadow Brush=#15000000, Offset='0,2', Radius=8, Opacity=0.12}">
                            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="14">
                                <Border Grid.Column="0"
                                        StrokeShape="RoundRectangle 14"
                                        BackgroundColor="{Binding ColorValue}"
                                        WidthRequest="56"
                                        HeightRequest="56"
                                        Shadow="{Shadow Brush=#30000000, Offset='0,2', Radius=8, Opacity=0.2}">
                                    <Label Text="📁" 
                                           FontSize="24"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Border>
                                <Label Grid.Column="1"
                                      Text="{Binding Name}"
                                      FontSize="16"
                                      FontAttributes="Bold"
                                      TextColor="#1F2937"
                                      VerticalOptions="Center"/>
                                <Border Grid.Column="2"
                                        StrokeShape="RoundRectangle 12"
                                        BackgroundColor="#FEE2E2"
                                        Padding="12,8"
                                        VerticalOptions="Center">
                                    <Button Text="🗑️"
                                           Clicked="OnDeleteCategoryClicked"
                                           CommandParameter="{Binding Id}"
                                           BackgroundColor="Transparent"
                                           TextColor="#EF4444"
                                           FontSize="16"
                                           Padding="0"
                                           WidthRequest="30"
                                           HeightRequest="30"/>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

