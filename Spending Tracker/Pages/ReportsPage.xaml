<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Spending_Tracker.Pages.ReportsPage"
             Title="Rapoarte">

    <ScrollView>
        <VerticalStackLayout Padding="15" Spacing="15">
            
            <Image Source="money.png"
                   HeightRequest="80"
                   Aspect="AspectFit"
                   HorizontalOptions="Center"
                   Margin="0,10,0,5"/>
            
            <Label Text="Rapoarte Cheltuieli" 
                   FontSize="24" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,0,0,10"/>

            <!-- Period Selection -->
            <Border Padding="15" StrokeShape="RoundRectangle 10" BackgroundColor="#F0F0F0">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Selectează Perioada" FontSize="14" FontAttributes="Bold"/>
                    <Picker x:Name="PeriodPicker" 
                            Title="Luna actuală"
                            FontSize="12">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Luna actuală</x:String>
                                <x:String>Luna trecută</x:String>
                                <x:String>Ultimele 3 luni</x:String>
                                <x:String>Ultimele 6 luni</x:String>
                                <x:String>Ultimul an</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>
                </VerticalStackLayout>
            </Border>

            <!-- Monthly Summary -->
            <Border Padding="15" StrokeShape="RoundRectangle 10" BackgroundColor="#4ECDC4">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Total Lunar" 
                           TextColor="White" 
                           FontSize="12"/>
                    <Label x:Name="MonthlyTotalLabel" 
                           Text="0.00 RON" 
                           TextColor="White" 
                           FontSize="28" 
                           FontAttributes="Bold"/>
                    <Label x:Name="MonthlyDetailsLabel" 
                           Text="0 cheltuieli în perioada selectată" 
                           TextColor="White" 
                           FontSize="12"/>
                </VerticalStackLayout>
            </Border>

            <!-- Average Daily Spending -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                <Border Grid.Column="0" Padding="15" StrokeShape="RoundRectangle 10" BackgroundColor="#FFB86C">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Media Zilnică" 
                               TextColor="White" 
                               FontSize="12"/>
                        <Label x:Name="DailyAverageLabel" 
                               Text="0.00 RON" 
                               TextColor="White" 
                               FontSize="18" 
                               FontAttributes="Bold"/>
                    </VerticalStackLayout>
                </Border>
                <Border Grid.Column="1" Padding="15" StrokeShape="RoundRectangle 10" BackgroundColor="#FF6B6B">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Max Zilă" 
                               TextColor="White" 
                               FontSize="12"/>
                        <Label x:Name="MaxDayLabel" 
                               Text="0.00 RON" 
                               TextColor="White" 
                               FontSize="18" 
                               FontAttributes="Bold"/>
                    </VerticalStackLayout>
                </Border>
            </Grid>

            <!-- Category Report -->
            <Label Text="Top Categorii" 
                   FontSize="16" 
                   FontAttributes="Bold"
                   Margin="0,10,0,5"/>

            <CollectionView x:Name="TopCategoriesCollectionView"
                           SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="12" Margin="0,3" StrokeShape="RoundRectangle 10" BackgroundColor="#F9F9F9">
                            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                                <Label Grid.Column="0"
                                      Text="{Binding DisplayText}"
                                      FontSize="14"
                                      VerticalOptions="Center"/>
                                <Label Grid.Column="1"
                                      Text="{Binding AmountText}"
                                      FontSize="14"
                                      FontAttributes="Bold"
                                      TextColor="#512BD4"
                                      VerticalOptions="Center"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

